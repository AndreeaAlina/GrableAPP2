<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/shop_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"

        android:layout_marginStart="254dp"
        android:layout_marginLeft="254dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="383dp"
        android:text="@string/shop_now"
        android:textSize="14sp" />

    <Button
        android:id="@+id/list_btn"
        android:layout_width="wrap_content"
        android:layout_height="58dp"


        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:layout_marginBottom="379dp"
        android:background="@drawable/startshoppingbutton"
        android:text="Start Shopping!"
        android:textColor="#FFF"
        android:textSize="17dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="277dp"
        android:layout_marginLeft="277dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="627dp"
        android:background="@drawable/settingsbutton"
        android:text="@string/settings"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/oferrsbutton"
        android:layout_width="165dp"
        android:layout_height="49dp"


        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="363dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="318dp"
        android:background="@drawable/loginbuttonpurple"
        android:text="Offers"
        android:textColor="#FFF" />

</RelativeLayout>